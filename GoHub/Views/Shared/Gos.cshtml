@model GoHub.ViewModels.GosViewModel
@{
    ViewBag.Title = "Home Page";
}

<h1>@Model.Heading</h1>
<ul class="gos voffset4">
    @foreach (var go in Model.UpcomingGos)
    {
        <li>
            <div class="date">
                <div class="month">
                    @go.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @go.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">

                <span class="artical">
                    @go.Artical.Name
                    
                    @if (Model.ShowActions)
                    {

                        <button data-user-id="@go.ArticalId" class="btn btn-link btn-sm pull-right  js-toggle-follow">Follow</button>
                    }
                </span>
                <span class="genre">

                    @go.Genre.Name
                </span>

                @if(Model.ShowActions)

                {
                    <button data-go-id="@go.Id" class=" btn  btn-default btn-sm pull-right  js-toggle-attendance">
                            Going ?
                        </button>
                }

            </div>

        </li>
    }
</ul>

@section scripts
{
    <script>
        $(document).ready(function() {
            $(".js-toggle-attendance").click(function(e) {
                var button = $(e.target);
                $.post("/api/attendances",
                        {
                            goId: button.attr("data-go-id")
                        })
                    .done(function() {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Going");

                    })
                    .fail(function() {
                        alert("Something failed!");
                    });
            });

            $(".js-toggle-follow").click(function(e) {
                var button = $(e.target);
                $.post("/api/followings", { followeeId: button.attr("data-user-id") })

                    .done(function() { button.text("Following"); })
                    .fail(function() { alert("Something Failed"); });

            });
        });
    </script>
}